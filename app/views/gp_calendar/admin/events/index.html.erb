<%= render 'search' %>

<%= page_entries_info @items -%>

<table class="index">
  <tr>
    <th class="action_link">詳細</th>
    <th style="text-align: center; width: 60px;"><%= sort_link GpCalendar::Event.human_attribute_name(:id), sort_key: 'id', default: :desc %></th>
    <th style="text-align: center; width: 120px;"><%= sort_link GpCalendar::Event.human_attribute_name(:started_on), sort_key: 'started_on', default: :desc %></th>
    <th style="text-align: center; width: 120px;"><%= sort_link GpCalendar::Event.human_attribute_name(:ended_on), sort_key: 'ended_on', default: :desc %></th>
    <th style="text-align: center;"><%= sort_link GpCalendar::Event.human_attribute_name(:title), sort_key: 'title' %></th>
    <th style="text-align: center; width: 120px;"><%= sort_link GpCalendar::Event.human_attribute_name(:created_at), sort_key: 'created_at', default: :desc %></th>
    <th style="text-align: center; width: 60px;"><%= sort_link GpCalendar::Event.human_attribute_name(:state), sort_key: 'state' %></th>
  </tr>

  <%- @items.each do |item| -%>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="action_link"><%= link_to :show, { action: :show, id: item } %></td>
    <td style="text-align: center;"><%= item.id %></td>
    <td style="text-align: center;"><%=l item.started_on %></td>
    <td style="text-align: center;"><%=l item.ended_on %></td>
    <td style="text-align: left;"><%= item.title %></td>
    <td style="text-align: center;"><%=l item.created_at %></td>
    <td style="text-align: center;"><%= item.state_text %></td>
  </tr>
  <%- end -%>
</table>

<%= paginate @items -%>
